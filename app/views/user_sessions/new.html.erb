<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1><%= 'ログイン' %></h1>

        <%= form_with url: login_path do |form| %>
            <div class = "mb-3">
                <%= form.label :email, class: "form-label" %>
                <%= form.text_field :email, class: "form-controll" %>
            </div>
            <div class = "mb-3">
                <%= form.label :password, class: "form-label" %>
                <%= form.password_field :password, class: "form-controll" %>
            </div>
            <%= form.submit 'ログイン', class: "btn btn-primary", data: { disable_with: t(".login")} %>
        <% end %>

      <div class='text-center'>
        <%= link_to '会員登録', new_user_path %>
        <%= link_to 'パスワードを忘れた方はこちら', new_password_reset_path %>
      </div>
    </div>
  </div>
</div>

